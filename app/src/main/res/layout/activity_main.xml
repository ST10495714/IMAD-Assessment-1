<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AppNametextview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/AppimageView"
        android:layout_width="414dp"
        android:layout_height="235dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/applogo"
        app:layout_constraintBottom_toTopOf="@+id/instructiontxtview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AppNametextview" />

    <TextView
        android:id="@+id/AppNametextview"
        android:layout_width="182dp"
        android:layout_height="53dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="11dp"
        android:text="Plan Platter"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/AppimageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="177dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="31dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnShowMeals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showmealtextview" />

    <Button
        android:id="@+id/btnShowMeals"
        android:layout_width="181dp"
        android:layout_height="68dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:text="Show Meals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnReset"
        app:layout_constraintTop_toBottomOf="@+id/showmealtextview" />

    <EditText
        android:id="@+id/searchtextview"
        android:layout_width="325dp"
        android:layout_height="49dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/showmealtextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructiontxtview" />

    <TextView
        android:id="@+id/instructiontxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="9dp"
        android:text="Please enter: Morning, Mid-morning etc"
        app:layout_constraintBottom_toTopOf="@+id/searchtextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AppimageView" />

    <TextView
        android:id="@+id/showmealtextview"
        android:layout_width="356dp"
        android:layout_height="144dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchtextview" />

</androidx.constraintlayout.widget.ConstraintLayout>